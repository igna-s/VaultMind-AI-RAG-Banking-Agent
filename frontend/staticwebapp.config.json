{
    "navigationFallback": {
        "rewrite": "/index.html"
    },
    "routes": [
        {
            "route": "/api/*",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE"
            ],
            "allowedRoles": [
                "anonymous",
                "authenticated"
            ]
        }
    ],
    "responseOverrides": {
        "404": {
            "rewrite": "/index.html"
        }
    },
    "globalHeaders": {
        "content-security-policy": "default-src https: 'unsafe-inline' 'unsafe-eval'; img-src 'self' data: https:;"
    },
    "mimeTypes": {
        ".json": "application/json"
    }
}